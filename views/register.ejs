<% include partials/header %>

    <div class="row">
        
        <div class="col-md-12">
            
            <form class="form-signin text-center" action="/register" method="post">
                
                <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
                
                <label for="username" class="sr-only">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="username" required autofocus>
                
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="password" required>
                
                <label for="firstName" class="sr-only">First Name</label>
                <input type="text" id="firstName" name="firstName" class="form-control" placeholder="first name" required>
                
                <label for="lastName" class="sr-only">Last Name</label>
                <input type="text" id="lastName" name="lastName" class="form-control" placeholder="last name" required>
                
                <label for="email" class="sr-only">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="email" required>
                
                <label for="avatar" class="sr-only">Avatar</label>
                <input type="text" id="avatar" name="avatar" class="form-control" placeholder="avatar url">
                
                <label for="adminCode" class="sr-only">Admin Code</label>
                <input type="password" id="adminCode" name="adminCode" class="form-control" placeholder="admin code">
                
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up!</button>
            </form>
            
            <div class="form-signin">
                <a href="/campgrounds">Go Back</a>
            </div>
            
        </div>
    </div>

<% include partials/footer %>