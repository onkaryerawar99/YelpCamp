<% include ../partials/header %>

    <div class="row">
        <div class="centered">
            <form class="text-center" method="POST" action="/campgrounds" enctype="multipart/form-data">
                <h1>Create a New Campground</h1>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" placeholder="name of campground" name="campground[name]" required></input>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" class="form-control" type="file" name="image" accept="image/*" required></input>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input id="description" class="form-control" type="text" placeholder="description" name="campground[description]"></input>
                </div>
                <div class="form-group">
                    <labe for="price">Price</labe>
                    <input id="price" class="form-control" type="number" placeholder="price" name="campground[price]" min="0.01" step="0.01"  ></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="#" id="back">Go back!</a>
        </div>


    </div>

<% include ../partials/footer %>