<% include ../partials/header %>

    <div class="row">
        
        <div class="centered">
            <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
                <h1>Edit Campground <%= campground.name %></h1>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name=campground[name] required></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name=campground[image]></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.description %>" name=campground[description]></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name=campground[price] min="0.01" step="0.01"  ></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name=campground[location] id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back!</a>
        </div>
    </div>

<% include ../partials/footer %>